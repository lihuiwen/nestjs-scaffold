# 应用配置
NODE_ENV=development
PORT=3000
API_PREFIX=api
APP_NAME=nestjs-scaffold
APP_URL=http://localhost:3000

# 数据库配置
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nestjs_scaffold
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志配置
LOG_LEVEL=debug
LOG_TO_FILE=false
LOG_DIR=logs
LOG_FILE_NAME=app-%DATE%.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Swagger配置
SWAGGER_TITLE=NestJS Scaffold API
SWAGGER_DESCRIPTION=NestJS Scaffold API Documentation
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASSWORD=your_password_here
MAIL_FROM=noreply@example.com